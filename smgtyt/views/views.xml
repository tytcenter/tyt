<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="smgtyt.list">
      <field name="name">smgtyt list</field>
      <field name="model">smgtyt.smgtyt</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="smgtyt.action_window">
      <field name="name">smgtyt window</field>
      <field name="res_model">smgtyt.smgtyt</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="smgtyt.action_server">
      <field name="name">smgtyt server</field>
      <field name="model_id" ref="model_smgtyt_smgtyt"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="smgtyt" id="smgtyt.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="smgtyt.menu_1" parent="smgtyt.menu_root"/>
    <menuitem name="Menu 2" id="smgtyt.menu_2" parent="smgtyt.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="smgtyt.menu_1_list" parent="smgtyt.menu_1"
              action="smgtyt.action_window"/>
    <menuitem name="Server to list" id="smgtyt" parent="smgtyt.menu_2"
              action="smgtyt.action_server"/>

  </data>
</odoo>